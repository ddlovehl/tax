<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ebuy.tax.user.implementation.account_detail.mapper.AccountDetailMapper">

    <!-- 通用查询结果列 -->
    <sql id="UserAll_column">
         user.id as id,
         user.user_id as userId,
         user.occur_amt as occurAmt,
         user.amt_dir as amtDir,
         user.curr_bal as currBal,
         user.type as type,
         user.occur_type_desc as occurTypeDesc,
         user.occur_time as occurTime,
         user.reseve1 as reseve1,
         user.reseve2 as reseve2,
         user.reseve3 as reseve3,
         user.remark as remark,
         user.create_time as createTime,
         user.update_time as updateTime
    </sql>


    <sql id="UserAll_where">
        <where>
            1=1
            <if test="id != null and id !=''">
              AND user.id = #{id}
            </if>

            <if test="userId != null and userId !=''">
                AND user.user_id = #{userId}
            </if>

            <if test="occurAmt != null and occurAmt !=''">
                AND user.occur_amt = #{occurAmt}
            </if>

            <if test="amtDir != null and amtDir !=''">
                AND user.amt_dir = #{amtDir}
            </if>

            <if test="currBal != null and currBal !=''">
                AND user.curr_bal = #{currBal}
            </if>

            <if test="type != null and type !=''">
                AND user.type = #{type}
            </if>

            <if test="occurTypeDesc != null and occurTypeDesc !=''">
                AND user.occur_type_desc = #{occurTypeDesc}
            </if>

            <if test="occurTime != null and occurTime !=''">
                AND user.occur_time = #{occurTime}
            </if>

            <if test="reseve1 != null and reseve1 !=''">
                AND user.reseve1 = #{reseve1}
            </if>

            <if test="reseve2 != null and reseve2 !=''">
                AND user.reseve2 = #{reseve2}
            </if>

            <if test="reseve3 != null and reseve3 !=''">
                AND user.reseve3 = #{reseve3}
            </if>

            <if test="remark != null and remark !=''">
                AND user.remark = #{remark}
            </if>

            <if test="createTime != null and createTime !=''">
                AND user.create_time = #{createTime}
            </if>

            <if test="updateTime != null and updateTime !=''">
                AND user.update_time = #{updateTime}
            </if>

        </where>
    </sql>

    <sql id="UserAll_table">
        FROM
		tax_account_detail account_detail
    </sql>

    <!-- 查全部 -->
    <select id="queryList" resultType="com.ebuy.tax.user.api.account_detail.entity.AccountDetail"
            parameterType="com.ebuy.tax.user.api.account_detail.entity.AccountDetail">
        SELECT
        <include refid="UserAll_column" />
        <include refid="UserAll_table" />
        <include refid="UserAll_where" />
    </select>

    <!-- 查数量 -->
    <select id="queryCount" resultType="java.lang.Integer"
            parameterType="com.ebuy.tax.user.api.account_detail.entity.AccountDetail">
        SELECT
        count(1)
        <include refid="UserAll_table" />
        <include refid="UserAll_where" />
    </select>

    <!-- 分页查询列表 -->
    <select id="queryListForPage" resultType="com.ebuy.tax.user.api.account_detail.entity.AccountDetail">
        select
        <include refid="UserAll_column" />
        <include refid="UserAll_table" />
        <if test="entity.id != null and entity.id !=''">
            AND user.id = #{entity.id}
        </if>
        <if test="entity.userId != null and entity.userId !=''">
            AND user.user_id = #{entity.userId}
        </if>
        <if test="entity.occurAmt != null and entity.occurAmt !=''">
            AND user.occur_amt = #{entity.occurAmt}
        </if>
        <if test="entity.amtDir != null and entity.amtDir !=''">
            AND user.amt_dir = #{entity.amtDir}
        </if>
        <if test="entity.currBal != null and entity.currBal !=''">
            AND user.curr_bal = #{entity.currBal}
        </if>
        <if test="entity.type != null and entity.type !=''">
            AND user.type = #{entity.type}
        </if>
        <if test="entity.occurTypeDesc != null and entity.occurTypeDesc !=''">
            AND user.occur_type_desc = #{entity.occurTypeDesc}
        </if>
        <if test="entity.occurTime != null and entity.occurTime !=''">
            AND user.occur_time = #{entity.occurTime}
        </if>
        <if test="entity.reseve1 != null and entity.reseve1 !=''">
            AND user.reseve1 = #{entity.reseve1}
        </if>
        <if test="entity.reseve2 != null and entity.reseve2 !=''">
            AND user.reseve2 = #{entity.reseve2}
        </if>
        <if test="entity.reseve3 != null and entity.reseve3 !=''">
            AND user.reseve3 = #{entity.reseve3}
        </if>
        <if test="entity.remark != null and entity.remark !=''">
            AND user.remark = #{entity.remark}
        </if>
        <if test="entity.createTime != null and entity.createTime !=''">
            AND user.create_time = #{entity.createTime}
        </if>
        <if test="entity.updateTime != null and entity.updateTime !=''">
            AND user.update_time = #{entity.updateTime}
        </if>
        order by CREATE_TIME desc
        limit #{start,jdbcType=INTEGER},#{pageSize,jdbcType=INTEGER};
    </select>

    <select id="queryEntityByAccountDetailEntity" resultType="com.ebuy.tax.user.api.account_detail.entity.AccountDetail">
        SELECT
        <include refid="UserAll_column" />
        <include refid="UserAll_table" />
        <include refid="UserAll_where" />
    </select>
</mapper>
